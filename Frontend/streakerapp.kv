# streaker.kv ou main.kv

<MainPage>:
    # --- Liaison des identifiants (ID) aux propriétés (ObjectProperty) en Python ---
    habit_name_input: habit_name_input
    liste_habitude: liste_habitude
    
    BoxLayout:
        orientation: "vertical"
        padding: '10dp'
        
        # Le premier BoxLayout (la barre supérieure, maintenant juste un Placeholder)
        BoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: '56dp'
            padding: '10dp'
            spacing: '5dp'
            Label:
                text: "Streaker - Suivi Minimaliste"
                font_size: '20sp'
        
        # Conteneur principal pour la saisie et l'affichage
        BoxLayout:
            orientation: "vertical"
            padding: '10dp' 
            spacing: '10dp' 

            # --- Le TextInput ---
            TextInput:
                id: habit_name_input 
                hint_text: 'Nom de l’habitude (ex: Boire 2L d\'eau)'
                multiline: False
                size_hint_y: None
                height: '48dp'
                
            # --- Le Bouton Ajouter ---
            Button:
                text: "Ajouter"
                size_hint_y: None
                height: '48dp'
                on_release: root.ajout_habitude() 
                
            # --- Le Label d'Affichage des Habitudes ---
            Label:
                id: liste_habitude 
                text: "Appuyez sur 'Ajouter' pour commencer le suivi."
                size_hint_y: 1.0    
                valign: 'top'        
                halign: 'left'       
                text_size: self.size 